generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  email           String          @unique
  password        String
  name            String?
  tasks           Task[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model Task {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String?
  status          TaskStatus
  priority        TaskPriority?
  deadline        DateTime?
  user            User            @relation(fields: [userId], references: [id])
  userId          String          @db.ObjectId
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

enum TaskStatus {
  To_do
  In_progress
  Under_review
  Finished
}

enum TaskPriority {
  Low
  Medium
  Urgent
}